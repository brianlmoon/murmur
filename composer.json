    "type": "project",
    "license": "BSD-3-Clause",
    "authors": [
        {
            "name": "Brian Moon"
        }
    ],
    "require": {
        "php": ">=8.1",
        "dealnews/db": "^4.0",
        "league/flysystem": "^3.0",
        "league/flysystem-aws-s3-v3": "^3.0",
        "league/oauth2-client": "^2.7",
        "league/oauth2-google": "^4.0",
        "league/oauth2-facebook": "^2.2",
        "moonspot/value-objects": "^2.3",
        "pagemill/router": "^3.0",
        "patrickbussmann/oauth2-apple": "^0.3",
        "twig/twig": "^3.0",
        "symfony/translation": "^8.0",
        "symfony/yaml": "^8.0",
        "symfony/twig-bridge": "^8.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0"
    },
    "autoload": {
        "psr-4": {
            "Murmur\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Murmur\\Tests\\": "tests/"
        }
    }
