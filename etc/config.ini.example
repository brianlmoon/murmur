; Murmur Configuration
; Copy this file to config.ini and update with your settings

; Database configuration
; Supported types: mysql, pgsql, pdo (for SQLite)

; MySQL / MariaDB example:
db.murmur.type = mysql
db.murmur.server = localhost
db.murmur.port = 3306
db.murmur.db = murmur
db.murmur.user = murmur
db.murmur.pass = your_password_here
db.murmur.charset = utf8mb4

; For SQLite, use:
; db.murmur.type = pdo
; db.murmur.dsn = "sqlite:/path/to/murmur/data/murmur.db"

; For PostgreSQL, use:
; db.murmur.type = pgsql
; db.murmur.server = localhost
; db.murmur.port = 5432
; db.murmur.db = murmur
; db.murmur.user = murmur
; db.murmur.pass = your_password_here

; ---------------------------------------------------------------------------
; Storage configuration
; ---------------------------------------------------------------------------
; Supported adapters: local, s3
;
; Local filesystem storage is the default if not configured.
; For cloud storage (S3), uncomment and configure the options below.

; Local filesystem (default)
; storage.uploads.adapter = local
; storage.uploads.local_path = "/path/to/murmur/public/uploads"
; storage.uploads.base_url = "/uploads"

; Amazon S3 (or S3-compatible services like MinIO, DigitalOcean Spaces)
; storage.uploads.adapter = s3
; storage.uploads.s3_key = your_access_key
; storage.uploads.s3_secret = your_secret_key
; storage.uploads.s3_region = us-east-1
; storage.uploads.s3_bucket = your-bucket-name
; storage.uploads.s3_endpoint =
; storage.uploads.base_url = "https://your-bucket-name.s3.us-east-1.amazonaws.com"

; ---------------------------------------------------------------------------
; Session configuration
; ---------------------------------------------------------------------------
; session.lifetime = Maximum session lifetime in seconds (default: 604800 = 7 days)
session.lifetime = 604800

; ---------------------------------------------------------------------------
; OAuth Configuration
; ---------------------------------------------------------------------------
; OAuth providers require client credentials from their developer consoles.
; See docs/oauth.md for setup instructions.
;
; Enable/disable individual providers in the admin settings panel.
; Leave credentials empty to disable a provider entirely.

; Google OAuth
; Get credentials from: https://console.cloud.google.com/apis/credentials
oauth.google.client_id = ""
oauth.google.client_secret = ""

; Facebook OAuth
; Get credentials from: https://developers.facebook.com/apps
oauth.facebook.client_id = ""
oauth.facebook.client_secret = ""

; Apple Sign In
; Get credentials from: https://developer.apple.com/account/resources/identifiers/list/serviceId
oauth.apple.client_id = ""
oauth.apple.team_id = ""
oauth.apple.key_id = ""
oauth.apple.private_key_path = ""
