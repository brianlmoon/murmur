{% extends theme ~ '/layouts/base.html.twig' %}

{% block title %}Settings - {{ site_name }}{% endblock %}

{% block head %}
<style>
    .settings-section {
        background-color: var(--color-surface);
        border: 1px solid var(--color-border);
        border-radius: var(--radius);
        padding: 1.5rem;
        margin-bottom: 1.5rem;
    }

    .settings-title {
        font-size: 1.125rem;
        font-weight: 600;
        margin-bottom: 1rem;
        padding-bottom: 0.5rem;
        border-bottom: 1px solid var(--color-border);
    }

    .avatar-section {
        display: flex;
        align-items: center;
        gap: 1rem;
        margin-bottom: 1rem;
    }

    .current-avatar {
        width: 64px;
        height: 64px;
        border-radius: 50%;
        object-fit: cover;
    }

    .current-avatar--placeholder {
        background-color: var(--color-primary);
        color: white;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.5rem;
        font-weight: 600;
    }

    .avatar-actions {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
    }

    .avatar-upload {
        font-size: 0.875rem;
    }

    .avatar-upload input {
        display: none;
    }

    .avatar-upload-label {
        color: var(--color-primary);
        cursor: pointer;
    }

    .avatar-upload-label:hover {
        text-decoration: underline;
    }

    .avatar-remove {
        display: inline;
    }

    .avatar-remove button {
        background: none;
        border: none;
        color: var(--color-error);
        font-size: 0.875rem;
        cursor: pointer;
        padding: 0;
    }

    .avatar-remove button:hover {
        text-decoration: underline;
    }

    .bio-counter {
        font-size: 0.75rem;
        color: var(--color-text-muted);
        text-align: right;
        margin-top: 0.25rem;
    }

    .form-actions {
        display: flex;
        gap: 0.5rem;
        margin-top: 1rem;
    }
</style>
{% endblock %}

{% block content %}
    <h1 style="font-size: 1.5rem; margin-bottom: 1.5rem;">{{ 'settings.title'|trans }}</h1>

    {% if error is defined and error %}
        <div class="flash flash-error" style="margin-bottom: 1rem;">
            {{ error }}
        </div>
    {% endif %}

    <div class="settings-section">
        <h2 class="settings-title">{{ 'settings.profile_title'|trans }}</h2>

        <div class="avatar-section">
            {% if avatar_url %}
                <img src="{{ avatar_url }}" alt="" class="current-avatar">
            {% else %}
                <div class="current-avatar current-avatar--placeholder">
                    {{ profile_user.username | first | upper }}
                </div>
            {% endif %}

            <div class="avatar-actions">
                {% if profile_user.avatar_path %}
                    <form action="{{ base_url }}/settings/avatar/remove" method="post" class="avatar-remove">
                        <input type="hidden" name="csrf_token" value="{{ csrf_token }}">
                        <button type="submit">{{ 'settings.remove_avatar'|trans }}</button>
                    </form>
                {% endif %}
            </div>
        </div>

        <form action="{{ base_url }}/settings" method="post" enctype="multipart/form-data">
            <input type="hidden" name="csrf_token" value="{{ csrf_token }}">

            <div class="form-group">
                <label class="form-label">{{ 'settings.avatar_label'|trans }}</label>
                <label class="avatar-upload">
                    <input type="file" name="avatar" accept="image/jpeg,image/png,image/gif,image/webp">
                    <span class="avatar-upload-label">{{ profile_user.avatar_path ? 'settings.change_avatar'|trans : 'settings.upload_avatar'|trans }}</span>
                </label>
            </div>

            <div class="form-group">
                <label for="name" class="form-label">{{ 'auth.name_label'|trans }}</label>
                <input type="text" id="name" name="name" class="form-input"
                       value="{{ name | default(profile_user.name) }}"
                       maxlength="100"
                       required>
            </div>

            <div class="form-group">
                <label for="username" class="form-label">{{ 'auth.username_label'|trans }}</label>
                <input type="text" id="username" name="username" class="form-input"
                       value="{{ username | default(profile_user.username) }}"
                       pattern="[a-zA-Z0-9_]+"
                       minlength="3" maxlength="30"
                       required>
            </div>

            <div class="form-group">
                <label for="email" class="form-label">{{ 'auth.email_label'|trans }}</label>
                <input type="email" id="email" name="email" class="form-input"
                       value="{{ email | default(profile_user.email) }}"
                       required>
            </div>

            <div class="form-group">
                <label for="bio" class="form-label">{{ 'settings.bio_label'|trans }}</label>
                <textarea id="bio" name="bio" class="form-input"
                          maxlength="{{ max_bio_length }}"
                          rows="3"
                          placeholder="{{ 'settings.bio_placeholder'|trans }}">{{ bio | default(profile_user.bio) }}</textarea>
                <div class="bio-counter">
                    <span id="bio-count">{{ (bio | default(profile_user.bio)) | length }}</span>/{{ max_bio_length }}
                </div>
            </div>

            <div class="form-actions">
                <button type="submit" class="btn btn-primary">{{ 'settings.save_changes'|trans }}</button>
                <a href="{{ base_url }}/user/{{ profile_user.username }}" class="btn" style="background: var(--color-bg);">{{ 'settings.view_profile'|trans }}</a>
            </div>
        </form>
    </div>

    <div class="settings-section">
        <h2 class="settings-title">{{ 'settings.password_title'|trans }}</h2>

        <form action="{{ base_url }}/settings/password" method="post">
            <input type="hidden" name="csrf_token" value="{{ csrf_token }}">

            <div class="form-group">
                <label for="current_password" class="form-label">{{ 'settings.current_password'|trans }}</label>
                <input type="password" id="current_password" name="current_password" class="form-input" required>
            </div>

            <div class="form-group">
                <label for="new_password" class="form-label">{{ 'settings.new_password'|trans }}</label>
                <input type="password" id="new_password" name="new_password" class="form-input"
                       minlength="8" required>
            </div>

            <div class="form-group">
                <label for="confirm_password" class="form-label">{{ 'settings.confirm_new_password'|trans }}</label>
                <input type="password" id="confirm_password" name="confirm_password" class="form-input"
                       minlength="8" required>
            </div>

            <button type="submit" class="btn btn-primary">{{ 'settings.update_password'|trans }}</button>
        </form>
    </div>

    {# Session Management Section #}
    <div class="settings-section">
        <h2 class="settings-title">{{ 'settings.sessions'|trans }}</h2>
        
        <div class="form-group">
            <p style="color: var(--color-text-muted); margin-bottom: 1rem;">
                {{ 'settings.logout_devices_help'|trans }}
            </p>
            
            <form method="post" action="{{ base_url }}/settings/logout-devices">
                <input type="hidden" name="csrf_token" value="{{ csrf_token }}">
                <button type="submit" class="btn" style="background: var(--color-bg);" onclick="return confirm('{{ 'settings.logout_devices_confirm'|trans|e('js') }}');">
                    {{ 'settings.logout_devices_button'|trans }}
                </button>
            </form>
        </div>
    </div>

    <script>
        const bio = document.getElementById('bio');
        const bioCount = document.getElementById('bio-count');

        bio.addEventListener('input', function() {
            bioCount.textContent = this.value.length;
        });
    </script>
{% endblock %}
