{% extends theme ~ '/layouts/base.html.twig' %}

{% block title %}New Message - {{ site_name }}{% endblock %}

{% block head %}
<style>
    .page-header {
        margin-bottom: 1.5rem;
    }

    .page-title {
        font-size: 1.5rem;
        font-weight: 600;
        margin-bottom: 0.5rem;
    }

    .page-subtitle {
        color: var(--color-text-muted);
    }

    .search-form {
        margin-bottom: 1.5rem;
    }

    .search-input-wrapper {
        display: flex;
        gap: 0.5rem;
    }

    .search-input {
        flex: 1;
        padding: 0.75rem 1rem;
        border: 1px solid var(--color-border);
        border-radius: var(--radius);
        font-size: 1rem;
    }

    .search-input:focus {
        outline: none;
        border-color: var(--color-primary);
    }

    .user-list {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
    }

    .user-item {
        display: flex;
        align-items: center;
        gap: 1rem;
        padding: 1rem;
        background-color: var(--color-surface);
        border: 1px solid var(--color-border);
        border-radius: var(--radius);
        text-decoration: none;
        color: inherit;
        transition: border-color 0.15s;
    }

    .user-item:hover {
        border-color: var(--color-primary);
        text-decoration: none;
    }

    .user-avatar {
        width: 48px;
        height: 48px;
        border-radius: 50%;
        object-fit: cover;
    }

    .user-avatar--placeholder {
        background-color: var(--color-primary);
        color: white;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.25rem;
        font-weight: 600;
    }

    .user-info {
        flex: 1;
    }

    .user-name {
        font-weight: 600;
    }

    .user-username {
        font-size: 0.875rem;
        color: var(--color-text-muted);
    }

    .empty-state {
        text-align: center;
        padding: 2rem 1rem;
        color: var(--color-text-muted);
    }

    .search-hint {
        text-align: center;
        padding: 2rem 1rem;
        color: var(--color-text-muted);
    }
</style>
{% endblock %}

{% block content %}
    <div class="page-header">
        <h1 class="page-title">New Message</h1>
        <p class="page-subtitle">Search for a user to start a conversation. You can only message users who follow you back.</p>
    </div>

    <form action="{{ base_url }}/messages/search" method="get" class="search-form">
        <div class="search-input-wrapper">
            <input type="text" 
                   name="q" 
                   value="{{ query }}" 
                   placeholder="Search by username or name..." 
                   class="search-input"
                   autofocus>
            <button type="submit" class="btn btn-primary">Search</button>
        </div>
    </form>

    {% if query == '' %}
        <div class="search-hint">
            <p>Enter a username or name to find someone to message.</p>
        </div>
    {% elseif users is empty %}
        <div class="empty-state">
            <p>No users found that you can message.</p>
            <p class="text-muted mt-1">Remember, you can only message users who follow you back.</p>
        </div>
    {% else %}
        <div class="user-list">
            {% for user in users %}
                <a href="{{ base_url }}/messages/new/{{ user.username }}" class="user-item">
                    {% if avatar_urls[user.user_id] %}
                        <img src="{{ avatar_urls[user.user_id] }}" 
                             alt="" 
                             class="user-avatar">
                    {% else %}
                        <div class="user-avatar user-avatar--placeholder">
                            {{ user.username | first | upper }}
                        </div>
                    {% endif %}

                    <div class="user-info">
                        <div class="user-name">{{ user.name ?: user.username }}</div>
                        {% if user.name %}
                            <div class="user-username">@{{ user.username }}</div>
                        {% endif %}
                    </div>
                </a>
            {% endfor %}
        </div>
    {% endif %}

    <div class="mt-3">
        <a href="{{ base_url }}/messages">‚Üê Back to messages</a>
    </div>
{% endblock %}
