{% extends theme ~ '/layouts/base.html.twig' %}

{% block title %}{{ profile_user.username }} - {{ site_name }}{% endblock %}

{% block head %}
<style>
    .profile-header {
        background-color: var(--color-surface);
        border: 1px solid var(--color-border);
        border-radius: var(--radius);
        padding: 1.5rem;
        margin-bottom: 1.5rem;
        text-align: center;
    }

    .profile-avatar {
        width: 80px;
        height: 80px;
        border-radius: 50%;
        object-fit: cover;
        margin-bottom: 1rem;
    }

    .profile-avatar--placeholder {
        background-color: var(--color-primary);
        color: white;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 2rem;
        font-weight: 600;
        margin: 0 auto 1rem;
    }

    .profile-username {
        font-size: 1.5rem;
        font-weight: 600;
        margin-bottom: 0.25rem;
    }

    .profile-bio {
        color: var(--color-text-muted);
        margin-bottom: 0.5rem;
    }

    .profile-joined {
        font-size: 0.75rem;
        color: var(--color-text-muted);
    }

    .profile-posts-title {
        font-size: 1rem;
        font-weight: 600;
        color: var(--color-text-muted);
        margin-bottom: 1rem;
    }

    .post {
        background-color: var(--color-surface);
        border: 1px solid var(--color-border);
        border-radius: var(--radius);
        padding: 1rem;
        margin-bottom: 1rem;
    }

    .post--reply {
        margin-left: 1.5rem;
        border-left: 3px solid var(--color-border);
    }

    .post-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 0.5rem;
    }

    .post-author {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        color: var(--color-text);
        font-weight: 500;
    }

    .post-author:hover {
        text-decoration: none;
    }

    .post-author:hover .post-username {
        text-decoration: underline;
    }

    .post-avatar {
        width: 32px;
        height: 32px;
        border-radius: 50%;
        object-fit: cover;
    }

    .post-avatar--placeholder {
        background-color: var(--color-primary);
        color: white;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 0.875rem;
        font-weight: 600;
    }

    .post-time {
        font-size: 0.75rem;
        color: var(--color-text-muted);
    }

    .post-body {
        line-height: 1.6;
        word-wrap: break-word;
        padding: 1rem 0;
    }

    .post-image {
        margin-top: 0.75rem;
    }

    .post-image img {
        max-width: 100%;
        border-radius: var(--radius);
    }

    .post-actions {
        display: flex;
        gap: 1rem;
        margin-top: 0.75rem;
        padding-top: 0.5rem;
        border-top: 1px solid var(--color-border);
        align-items: center;
    }

    .post-action {
        font-size: 0.875rem;
        color: var(--color-text-muted);
        background: none;
        border: none;
        cursor: pointer;
        padding: 0;
        line-height: 1;
        display: inline-flex;
        align-items: center;
    }

    .post-action:hover {
        color: var(--color-primary);
    }

    .post-action--delete:hover {
        color: var(--color-error);
    }

    .post-action--like {
        display: inline-flex;
        align-items: center;
        gap: 0.25rem;
    }

    .post-action--liked {
        color: #e91e63;
    }

    .post-action--liked:hover {
        color: #c2185b;
    }

    .post-action--like-disabled {
        display: inline-flex;
        align-items: center;
        gap: 0.25rem;
        font-size: 0.875rem;
        color: var(--color-text-muted);
    }

    .post-like-form,
    .post-delete-form {
        display: inline-flex;
        align-items: center;
    }

    .empty-state {
        text-align: center;
        padding: 2rem 1rem;
        color: var(--color-text-muted);
    }

    .reply-indicator {
        font-size: 0.75rem;
        color: var(--color-text-muted);
        margin-bottom: 0.5rem;
    }

    .profile-stats {
        display: flex;
        justify-content: center;
        gap: 1.5rem;
        margin: 0.75rem 0;
        font-size: 0.875rem;
    }

    .profile-stat {
        color: var(--color-text-muted);
    }

    .profile-stat strong {
        color: var(--color-text);
        font-weight: 600;
    }

    .profile-actions {
        margin-top: 1rem;
    }

    .btn-follow {
        background-color: var(--color-primary);
        color: white;
        border: none;
        padding: 0.5rem 1.5rem;
        border-radius: var(--radius);
        cursor: pointer;
        font-size: 0.875rem;
        font-weight: 500;
    }

    .btn-follow:hover {
        background-color: var(--color-primary-hover, #0056b3);
    }

    .btn-unfollow {
        background-color: var(--color-surface);
        color: var(--color-text);
        border: 1px solid var(--color-border);
        padding: 0.5rem 1.5rem;
        border-radius: var(--radius);
        cursor: pointer;
        font-size: 0.875rem;
        font-weight: 500;
    }

    .btn-unfollow:hover {
        background-color: var(--color-error);
        color: white;
        border-color: var(--color-error);
    }

    .btn-message {
        background-color: var(--color-surface);
        color: var(--color-text);
        border: 1px solid var(--color-border);
        padding: 0.5rem 1.5rem;
        border-radius: var(--radius);
        font-size: 0.875rem;
        font-weight: 500;
        text-decoration: none;
        display: inline-block;
    }

    .btn-message:hover {
        border-color: var(--color-primary);
        color: var(--color-primary);
        text-decoration: none;
    }
</style>
{% endblock %}

{% block content %}
    <div class="profile-header">
        {% if profile_avatar_url %}
            <img src="{{ profile_avatar_url }}" alt="" class="profile-avatar">
        {% else %}
            <div class="profile-avatar profile-avatar--placeholder">
                {{ profile_user.username | first | upper }}
            </div>
        {% endif %}

        {% if profile_user.name %}
            <h1 class="profile-username">{{ profile_user.name }}</h1>
            <p class="profile-bio" style="margin-bottom: 0.25rem;">@{{ profile_user.username }}</p>
        {% else %}
            <h1 class="profile-username">{{ profile_user.username }}</h1>
        {% endif %}

        {% if profile_user.bio %}
            <p class="profile-bio">{{ profile_user.bio }}</p>
        {% endif %}

        <div class="profile-stats">
            <span class="profile-stat">{{ 'profile.followers'|trans({'count': follower_count}) }}</span>
            <span class="profile-stat">{{ 'profile.following'|trans({'count': following_count}) }}</span>
        </div>

        <p class="profile-joined">{{ 'profile.joined'|trans({'%date%': profile_user.created_at|localized_date('month_year')}) }}</p>

        <div class="profile-actions">
            {% if current_user and current_user.user_id == profile_user.user_id %}
                <a href="{{ base_url }}/settings" class="btn btn-primary">{{ 'profile.edit_profile'|trans }}</a>
            {% elseif current_user %}
                {% if is_following %}
                    <form action="{{ base_url }}/user/{{ profile_user.username }}/unfollow" method="post" style="display: inline;">
                        <input type="hidden" name="csrf_token" value="{{ csrf_token }}">
                        <button type="submit" class="btn-unfollow">{{ 'profile.unfollow'|trans }}</button>
                    </form>
                {% else %}
                    <form action="{{ base_url }}/user/{{ profile_user.username }}/follow" method="post" style="display: inline;">
                        <input type="hidden" name="csrf_token" value="{{ csrf_token }}">
                        <button type="submit" class="btn-follow">{{ 'profile.follow'|trans }}</button>
                    </form>
                {% endif %}
                {% if can_message is defined and can_message %}
                    <a href="{{ base_url }}/messages/new/{{ profile_user.username }}" class="btn-message">{{ 'profile.message'|trans }}</a>
                {% endif %}
            {% endif %}
        </div>
    </div>

    <h2 class="profile-posts-title">{{ 'profile.posts_title'|trans }}</h2>

    {% if posts is empty %}
        <div class="empty-state">
            <p>{{ 'profile.no_posts'|trans({'%username%': profile_user.username}) }}</p>
        </div>
    {% else %}
        {% for item in posts %}
            {% if item.post.parent_id %}
                <div class="reply-indicator">
                    {{ 'post.commenting_on'|trans }}
                </div>
            {% endif %}
            {% include theme ~ '/components/post.html.twig' with {
                'post': item.post,
                'author': item.author,
                'image_urls': item.image_urls,
                'avatar_url': item.avatar_url,
                'like_count': item.like_count,
                'user_liked': item.user_liked,
                'reply_count': item.reply_count,
                'is_reply': item.post.parent_id is not null
            } %}
        {% endfor %}
    {% endif %}
{% endblock %}
