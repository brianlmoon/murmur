{#
    Compose form styles - shared CSS for the post compose form

    Include this component in the head block of any page that uses the compose form.
    Example: {% include theme ~ '/components/compose-styles.html.twig' %}
#}
<style>
    .compose-form {
        background-color: var(--color-surface);
        border: 1px solid var(--color-border);
        border-radius: var(--radius);
        padding: 1rem;
        margin-bottom: 1.5rem;
    }

    .compose-body {
        position: relative;
    }

    .compose-textarea {
        width: 100%;
        min-height: 80px;
        padding: 0.5rem;
        border: 1px solid var(--color-border);
        border-radius: var(--radius);
        font-size: 1rem;
        font-family: inherit;
        resize: vertical;
    }

    .compose-textarea:focus {
        outline: none;
        border-color: var(--color-primary);
    }

    .compose-counter {
        position: absolute;
        bottom: 0.5rem;
        right: 0.5rem;
        font-size: 0.75rem;
        color: var(--color-text-muted);
    }

    .compose-footer {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-top: 0.75rem;
    }

    .compose-file {
        display: none;
    }

    .compose-upload-label {
        font-size: 0.875rem;
        color: var(--color-primary);
        cursor: pointer;
    }

    .compose-upload-label:hover {
        text-decoration: underline;
    }

    .compose-upload-count {
        font-size: 0.75rem;
        color: var(--color-text-muted);
    }

    .compose-previews {
        display: flex;
        flex-wrap: wrap;
        gap: 0.5rem;
        margin-top: 0.75rem;
    }

    .compose-preview-item {
        position: relative;
        display: inline-block;
    }

    .compose-preview-img {
        width: 80px;
        height: 80px;
        object-fit: cover;
        border-radius: var(--radius);
        border: 1px solid var(--color-border);
    }

    .compose-topic {
        margin-bottom: 0.75rem;
    }

    .compose-topic-select {
        width: 100%;
        padding: 0.5rem 0.75rem;
        border: 1px solid var(--color-border);
        border-radius: var(--radius);
        font-size: 0.875rem;
        background-color: white;
    }

    .compose-topic-select:focus {
        outline: none;
        border-color: var(--color-primary);
    }
</style>
